                @Html.DisplayNameFor(model => model.shopDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.shopLogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.offlineShopAddress)
            </th>
