            <th>
                @Html.DisplayNameFor(model => model.createdAt)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.shopName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.shopDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.shopLogo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.offlineShopAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.googleMapLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.createdAt)
                </td>
                <td>
                    @Html.ActionLink("Edit", "updateSellerAccountDetails", new { id = item.id }) |
                    @Html.ActionLink("Details", "showOneSellerDetails", new { id = item.id }) |
                    @Html.ActionLink("Delete", "deleteAccount", new { id = item.id })
                </td>
            </tr>
        }

    </table>
    
    
</body>
</html>
