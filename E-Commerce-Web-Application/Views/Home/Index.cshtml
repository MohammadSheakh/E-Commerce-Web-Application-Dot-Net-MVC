    <div class="container text-center">
        <div class="row align-items-start">
            <div class="col-2 border border-1">
                @{
                    // Right Side Navbar Component
                    Html.RenderPartial("_MainCategory");
                }
            </div>
            <div class="col-8 border border-1">
